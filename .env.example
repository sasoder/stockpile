# Stockpile Configuration
# Copy this file to .env and fill in your values

# Required API Keys
GEMINI_API_KEY=

# Input Sources (at least one required)
LOCAL_INPUT_FOLDER=input
GOOGLE_DRIVE_INPUT_FOLDER_ID=

# Output Destinations (at least one required)
LOCAL_OUTPUT_FOLDER=output
GOOGLE_DRIVE_OUTPUT_FOLDER_ID=

# Email Notifications (optional)
NOTIFICATION_EMAIL=

# Model Configurations
WHISPER_MODEL=base
GEMINI_MODEL=gemma-3-27b-it

# Google API (required if using Google Drive and/or you want email notifications)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Processing Settings
MAX_VIDEOS_PER_PHRASE=3
MAX_VIDEO_DURATION_SECONDS=900
MAX_VIDEO_SIZE_MB=80

# Database
DATABASE_PATH=stockpile_jobs.db