# B-Roll Video Processor Configuration
# Copy this file to .env and fill in your values

# Required API Keys
GEMINI_API_KEY=your_gemini_api_key_here

# Input Sources (at least one required)
LOCAL_INPUT_FOLDER=/path/to/input/videos
GOOGLE_DRIVE_FOLDER_ID=your_google_drive_folder_id

# Output Destinations (at least one required)
LOCAL_OUTPUT_FOLDER=/path/to/output/broll
GOOGLE_DRIVE_CREDENTIALS_PATH=/path/to/google_credentials.json

# Email Notifications (optional)
GMAIL_USER=your_email@gmail.com
GMAIL_PASSWORD=your_app_password

# Model Configurations
WHISPER_MODEL=base
GEMINI_MODEL=gemini-2.0-flash-001

# Google Drive OAuth (required if using Google Drive)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# YouTube API (required for video search)
YOUTUBE_API_KEY=your_youtube_api_key

# Processing Settings
MAX_CONCURRENT_JOBS=3
MAX_VIDEOS_PER_PHRASE=3
VIDEO_DURATION_LIMIT=600

# Database
DATABASE_PATH=broll_jobs.db